---
import Logo from '../assets/logo.svg';
---

<header class="bg-[#0b0b0b] text-white sticky top-0 z-50" role="banner">
	<div class="max-w-7xl mx-auto flex items-center justify-between gap-3 px-4 py-3">
		<a class="flex items-center gap-3 no-underline text-white" href="/" aria-label="WoodTime home">
			<span class="w-9 h-9 inline-flex items-center justify-center">
				<Logo />
			</span>
			<span class="font-semibold text-base hidden sm:inline">WoodTime</span>
		</a>

		<nav aria-label="Barre d'actions">
			<a class="inline-block bg-[#ff7a0a] text-white px-4 py-2 rounded-full shadow-lg transform-gpu transition-transform hover:-translate-y-0.5" href="#">Promo Black Friday</a>
		</nav>
	</div>
</header>
